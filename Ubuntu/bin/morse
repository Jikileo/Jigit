##### START #####

# Kiem tra shell
set -e

# Thêm các biến màu sắc
# Colors
BLUE='\e[38;5;105m'
BROWN='\e[38;5;100m'
GREEN='\e[38;5;119m'
NORMAL='\e[0m'
RED="\e[38;5;197m"
YELLOW='\e[38;5;190m'

# Nhập chuỗi encode_char và decode_char
encode_char(){
    declare -A morse_my
    morse_my[A]=".-";
    morse_my[B]="-...";
    morse_my[C]="-.-.";
    morse_my[D]="-..";
    morse_my[E]=".";
    morse_my[F]="..-.";
    morse_my[G]="--.";
    morse_my[H]="....";
    morse_my[I]="..";
    morse_my[J]=".---";
    morse_my[K]="-.-";
    morse_my[L]=".-..";
    morse_my[M]="--";
    morse_my[N]="-.";
    morse_my[O]="---";
    morse_my[P]=".--.";
    morse_my[Q]="--.-";
    morse_my[R]=".-.";
    morse_my[S]="...";
    morse_my[T]="-";
    morse_my[U]="..-";
    morse_my[V]="...-";
    morse_my[W]=".--";
    morse_my[X]="-..-";
    morse_my[Y]="-.--";
    morse_my[Z]="--..";
    morse_my[.]=".-.-.-";
    morse_my[,]="--..--";
    morse_my[?]="..--..";
    morse_my[!]="-.-.--";
    morse_my[/]="-..-.";
    morse_my[:]="---...";
    morse_my[;]="-.-.-.";
    morse_my[=]="-...-";
    morse_my[+]=".-.-.";
    morse_my[_]="..--.-";
    morse_my[1]=".----";
    morse_my[2]="..---";
    morse_my[3]="...--";
    morse_my[4]="....-";
    morse_my[5]=".....";
    morse_my[6]="-....";
    morse_my[7]="--...";
    morse_my[8]="---..";
    morse_my[9]="----.";
    morse_my[0]="-----";
    morse_my[ ]="/";
    morse_my[space]="/";
    morse_my[return]="\n";

    echo -ne "${morse_my[${1}]:-/} "
}

decode_char(){
    declare -A letter
    letter[.-]="A";
    letter[-...]="B";
    letter[-.-.]="C";
    letter[-..]="D";
    letter[.]="E";
    letter[..-.]="F";
    letter[--.]="G";
    letter[....]="H";
    letter[..]="I";
    letter[.---]="J";
    letter[-.-]="K";
    letter[.-..]="L";
    letter[--]="M";
    letter[-.]="N";
    letter[---]="O";
    letter[.--.]="P";
    letter[--.-]="Q";
    letter[.-.]="R";
    letter[...]="S";
    letter[-]="T";
    letter[..-]="U";
    letter[...-]="V";
    letter[.--]="W";
    letter[-..-]="X";
    letter[-.--]="Y";
    letter[--..]="Z";
    letter[-----]="0";
    letter[.----]="1";
    letter[..---]="2";
    letter[...--]="3";
    letter[....-]="4";
    letter[.....]="5";
    letter[-....]="6";
    letter[--...]="7";
    letter[---..]="8";
    letter[----.]="9";
    letter[.-.-.-]=".";
    letter[--..--]=",";
    letter[..--..]="?";
    letter[-.-.--]="!";
    letter[-..-.]="/";
    letter[---...]=":";
    letter[-.-.-.]=";";
    letter[-...-]="=";
    letter[.-.-.]="+";
    letter[..--.-]="_";
    letter[.--.-.]="@";
    letter[/]=" ";

    letter[space]=" ";
    
    echo -ne "${letter[${1}]}"
    
}

str="a b c d e f g h i j k l m n o p q r s t u v w x y z 1 2 3 4 5 6 7 8 9 0 \. \, \! \? \/ \: \; \= \+ \_ \@"
giaima=($str)
str=".- -... -.-. -.. . ..-. --. .... .. .--- -.- .-.. -- -. --- .--. --.- .-. ... - ..- ...- .-- -..- -.-- --.. .---- ..--- ...-- ....- ..... -..... --... ---.. ----. ----- .-.-.- --..-- -.-.-- ..--.. -..-. ---... -.-.-. -...- .-.-. ..--.- .--.-."
mahoa=($str)

# HƯỚNG DẪN SỬ DỤNG
USAGE="
${BROWN}Usage${NORMAL}: morse [Option] [File|String]
Shell script này dùng để encode va decode mã morse với chuỗi và tập tin
  ${GREEN}1${NORMAL}) Biên dịch chuỗi
  ${GREEN}2${NORMAL}) Biên dịch tập tin
  ${GREEN}3${NORMAL}) Điện tín mã morse
${BROWN}Options${NORMAL}:
Bao gồm 4 loại
                  Dịch chuỗi
  [-e/--encode]   Chuyển tập tin thành mã morse
  [-d/--decode]   Dịch tập tin
  [-dt]           Điện tín mã morse
"
HELP="
${BROWN}Usage Examples${NORMAL}:
  Dịch đoạn văn bản input
  \$ ${BLUE}morse Hello Jiki${NORMAL}

  Lưu đoạn văn bản đã dịch
  \$ ${BLUE}morse Hello Jiki > hello.txt${NORMAL}

  Dùng lệnh cat và chuyển dịch sang mã morse
  \$ ${BLUE}cat example.txt | morse${NORMAL}

  Dùng option -t hoặc --text để dịch ngược chuỗi mã morse
  \$ ${BLUE}morse --text

  Dịch văn bản tập tin thành mã morse
  \$ ${BLUE}morse -e example.txt${NORMAL}

  Lưu tập tin đã chuyển thành mã morse
  \$ ${BLUE}morse -e example.txt > code-morse.txt${NORMAL}

  Chuyển dịch từ tập tin chứa mã morse sang văn bản thường
  \$ ${BLUE}morse -d code-morse.txt${NORMAL}

  Lưu tập tin đã chuyển thành văn bản
  \$ ${BLUE}morse -d code-morse.txt > example.txt${NORMAL}

  Điện tín mã morse
  \$ ${BLUE}morse -dt Hello Jiki${NORMAL}

  Phiên bản tiếp theo mình sẽ nâng cấp các options khác ...
"
function morse_code() {
  line="$@"
  for (( i=0; i<${#line}; i++ ))
  do
    char="${line:$i:1}"
    j=0
    char=$(echo "$char" | tr 'A-Z' 'a-z')
    flag="0"
    while [[ $j -lt ${#giaima[@]} ]]
    do
      if [[ $char == ${giaima[$j]} ]]
      then
        echo -n "${mahoa[$j]} "
        flag="1"
      fi
      j=$(( $j + 1 ))
    done
    if [[ $char == " " ]]
    then
      echo -ne "/ "
      flag="1"
    elif [[ $char == "\\" ]]
    then
      echo -ne "/ "
      i=$(($i + 1))
      flag="1"
    fi
    if [[ ! -z $char && $flag == "0" ]]
    then
      echo -n "#"
    fi
  done
  echo 
}

function morse_to_text() {
  local morse_line="$1"
  local text=""
  local code
  local char

  IFS=" " read -ra codes <<< "$morse_line"

  for code in "${codes[@]}"
  do
    case "$code" in
      ".-") char="a" ;;
      "-...") char="b" ;;
      "-.-.") char="c" ;;
      "-..") char="d" ;;
      ".") char="e" ;;
      "..-.") char="f" ;;
      "--.") char="g" ;;
      "....") char="h" ;;
      "..") char="i" ;;
      ".---") char="j" ;;
      "-.-") char="k" ;;
      ".-..") char="l" ;;
      "--") char="m" ;;
      "-.") char="n" ;;
      "---") char="o" ;;
      ".--.") char="p" ;;
      "--.-") char="q" ;;
      ".-.") char="r" ;;
      "...") char="s" ;;
      "-") char="t" ;;
      "..-") char="u" ;;
      "...-") char="v" ;;
      ".--") char="w" ;;
      "-..-") char="x" ;;
      "-.--") char="y" ;;
      "--..") char="z" ;;
      "-----") char="0" ;;
      ".----") char="1" ;;
      "..---") char="2" ;;
      "...--") char="3" ;;
      "....-") char="4" ;;
      ".....") char="5" ;;
      "-....") char="6" ;;
      "--...") char="7" ;;
      "---..") char="8" ;;
      "----.") char="9" ;;
      ".-.-.-") char="." ;;
      "--..--") char="," ;;
      "..--..") char="?" ;;
      "-.-.--") char="!" ;;
      "-..-.") char="/" ;;
      "---...") char=":" ;;
      "-.-.-.") char=";" ;;
      "-...-") char="=" ;;
      ".-.-.") char="+" ;;
      "..--.-") char="_" ;;
      ".--.-.") char="@" ;;
      "/") char=" " ;;
      *) char="$code" ;;
    esac

    text+="$char"
  done

  echo "$text"
}

if [[ "$1" = "-e" ]] || [[ "$1" = "--encode" ]]
then
  while IFS= read -re line1 || [[ -n "$line1" ]]
  do
    #echo "Đoạn văn bản là : $line1"
    #echo "Biên dịch ma morse : "
    for ch in $(echo "${line1^^}" | grep -o . | sed 's/ /space/g')
    do
      encode_char "$ch"
    done
    echo " "
  done < "$2"
elif [[ "$1" = "-d" ]] || [[ "$1" = "--decode" ]]
then
  while IFS= read -re line2 || [[ -n "$line2" ]]
  do
    #echo "Mã morse là : $line2"
    #echo "Được biên dịch : "
    for ch in $(echo "${line2}" | sed 's./.\nspace\n.g')
    do
      decode_char "$ch"
    done
  echo " "
  done < "$2"
fi

function dien_tin() {
  ffmpeg -f lavfi -i "sine=frequency=1000:duration=0.1" dot.wav 2>/dev/null
  ffmpeg -f lavfi -i "sine=frequency=1000:duration=0.3" dash.wav 2>/dev/null
  ffmpeg -f lavfi -i "sine=frequency=0:duration=0.1" pause.wav 2>/dev/null
  ffmpeg -f lavfi -i "sine=frequency=0:duration=0.3" slash.wav 2>/dev/null
  cat /dev/null > sounds
  line=$alphabet
  for (( i=8; i<${#line}; i++ ))
  do
    char="${line:$i:1}"
    if [[ $char == "." ]]
    then
      echo "file 'dot.wav'" >> sounds
      echo "file 'pause.wav'" >> sounds
    elif [[ $char == "-" ]]
    then
      echo "file 'dash.wav'" >> sounds
      echo "file 'pause.wav'" >> sounds
    elif [[ $char == "/" ]]
    then
      echo "file 'slash.wav'" >> sounds
      echo "file 'pause.wav'" >> sounds
    else
      echo "file 'pause.wav'" >> sounds
    fi
  done
  rm -rf dientin.wav
  ffmpeg -f concat -i sounds -c copy dientin.wav 2>/dev/null
  rm -rf dot.wav dash.wav slash.wav pause.wav sounds
}

# Menu cho scrip code
argument=""

for arg in "$@"
do
  if [ "$arg" = "-t" ] || [ "$arg" = "--text" ]
  then
    MODE="textmorse"
    read -p "Nhập morse code : " input_morse
    textmorse=$(morse_to_text "$input_morse")
    echo -e "${BROWN}Được chuyển dịch :${NORMAL} $textmorse"
    exit 1
  elif [ "$arg" = "-d" ] || [ "$arg" = "--decode" ]
  then
    MODE="decode"
  elif [ "$arg" = "-e" ] || [ "$arg" = "--encode" ]
  then
    MODE="encode"
  elif [ "$arg" = "-dt" ]
  then
    MODE="dientin"
    dientin="dien_tin"
    alphabet=$(morse_code "$@")
    dien_tin
  elif [ "$arg" = "-ssh" ]
  then
    alphabet=$(morse_code "$@")
    dien_tin
    if ls *.wav 1> /dev/null 2>&1
    then
      for file in *.wav
      do
        echo "Xin vui lòng nhập địa chỉ IP Adress : "
        read IP_ADRESS
        MOBILE_HOST="$IP_ADRESS"
        MOBILE_PORT="22"
        MOBILE_USER="mobile"
        LOCAL_FILE="/var/mobile/$file"
        # Tao mot tap tin tam thoi
        TEMP_FILE=$(mktemp)
        mv "$file" "$TEMP_FILE"
        # Gui tap tin tam thoi bang ssh server
        scp -P "$MOBILE_PORT" "$TEMP_FILE" "$MOBILE_USER@$MOBILE_HOST:$LOCAL_FILE"
        echo "Đã gửi đến $IP_ADRESS ... !!!"
        # Don dep tap tin tam thoi
        rm -rf "$TEMP_FILE"
      done
    fi
  elif [ "$arg" = "-h" ] || [ "$arg" = "help" ] || [ "$arg" = "--help" ]
  then  
    echo -e "$USAGE$HELP"
    exit 0
  else
    argument="$argument $arg"
  fi
done

if [ -t 0 ]
then
  trimmed_arguments="${argument// }"
  if [ -f "$trimmed_arguments" ]
  then
    while read -re line
    do
      morse_code "$line"
    done < <(cat /dev/null)
  else
    while read -re line
    do
      morse_code "$line"
    done < <(echo "$argument")
  fi
else
  while IFS= read -re line
  do
    morse_code "$line"
  done
fi

# Kiem tra ffmpeg command
if ! command -v ffmpeg >/dev/null 2>&1
then
  echo -e "${RED}Để sử dụng điện tín vui lòng cài đặt command ffmpeg ... !!!${NORMAL}"
  echo -e "${RED}Trên Ubuntu/Debian : sudo apt-get install ffmpeg${NORMAL}"
  exit 1
fi

exit 0
# THE END
